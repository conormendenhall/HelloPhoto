<Page
    x:Class="HelloPhoto.Confirmation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloPhoto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="42,834,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="176" Width="1042" FontSize="72">
            <Run Text="@QLPhotoBoothTwitterAccount"/>
        </TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="1530,834,0,0" TextWrapping="Wrap" Text="#QLIT4lyfe" VerticalAlignment="Top" Height="176" Width="358" FontSize="72" SelectionChanged="TextBlock_SelectionChanged"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="758" Margin="42,32,0,0" Stroke="Black" VerticalAlignment="Top" Width="1846"/>

        <HyperlinkButton Click="HomeButton_Click" Content="Home" HorizontalAlignment="Stretch" Margin="1596,0,0,0" VerticalAlignment="Top" Height="194" FontSize="72" Background="#FFFFC68E"/>
        <HyperlinkButton Click="RetakeButton_Click" Content="Retake" HorizontalAlignment="Stretch" Margin="1596,226,0,0" VerticalAlignment="Top" Height="194" FontSize="72" Background="#FFFFC68E"/>

    </Grid>
</Page>
