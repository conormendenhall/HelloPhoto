<Page
    x:Class="HelloPhoto.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloPhoto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <!--Camera preview-->
        <CaptureElement Name="PreviewControl" Stretch="Uniform"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Welcome to QL Tech Con" VerticalAlignment="Top" Height="136" Width="1900" SelectionChanged="TextBlock_SelectionChanged" Foreground="#FF0080FF" FontSize="72" TextAlignment="Center"/>
        <HyperlinkButton Click="HyperlinkButton_Click" Content="Touch here to take photo" HorizontalAlignment="Stretch" Margin="100,820,100,0" VerticalAlignment="Top" Height="194" FontSize="72" Background="#FFFFC68E"/>

    </Grid>
</Page>
